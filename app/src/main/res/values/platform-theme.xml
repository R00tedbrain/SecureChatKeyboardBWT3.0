<resources>

  <!-- Tema principal para la configuración del teclado -->
  <style name="platformSettingsTheme" parent="@android:style/Theme.DeviceDefault">
    <!-- Aplica tu fuente, asegurándote de tener mi_fuente.ttf en res/font/ -->
    <item name="android:fontFamily">@font/barrioregular</item>
    <!-- (Opcional) Versión sin android: para compatibilidad en algunos casos:
         <item name="fontFamily">@font/mi_fuente</item> -->
  </style>

  <!-- Tema para diálogos (si también quieres la misma fuente en ellos) -->
  <style name="platformDialogTheme" parent="@android:style/Theme.DeviceDefault.Dialog">
    <!-- Aplica la misma fuente o la que quieras -->
    <item name="android:fontFamily">@font/barrioregular</item>
    <!-- (Opcional) Versión sin android: para compatibilidad:
         <item name="fontFamily">@font/mi_fuente</item> -->
  </style>
</resources>
